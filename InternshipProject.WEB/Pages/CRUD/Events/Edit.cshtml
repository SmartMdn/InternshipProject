@page
@model InternshipProject.WEB.Pages.CRUD.Events.EditModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Event</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Event.Id" />
            <div class="form-group">
                <label asp-for="Event.Name" class="control-label"></label>
                <input asp-for="Event.Name" class="form-control" />
                <span asp-validation-for="Event.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Event.EventDuration" class="control-label"></label>
                <input asp-for="Event.EventDuration" class="form-control" />
                <span asp-validation-for="Event.EventDuration" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Event.EventDate" class="control-label"></label>
                <input asp-for="Event.EventDate" class="form-control" />
                <span asp-validation-for="Event.EventDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Event.BookingPeriodDays" class="control-label"></label>
                <input asp-for="Event.BookingPeriodDays" class="form-control" />
                <span asp-validation-for="Event.BookingPeriodDays" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Event.HallId" class="control-label"></label>
                <select asp-for="Event.HallId" class="form-control" asp-items="ViewBag.HallId"></select>
                <span asp-validation-for="Event.HallId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Event.CategoryId" class="control-label"></label>
                <select asp-for="Event.CategoryId" class="form-control" asp-items="ViewBag.CategoryId"></select>
                <span asp-validation-for="Event.CategoryId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
