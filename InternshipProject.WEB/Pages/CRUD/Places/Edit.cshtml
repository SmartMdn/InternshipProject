@page
@model InternshipProject.WEB.Pages.CRUD.Places.EditModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Place</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Place.Id" />
            <div class="form-group">
                <label asp-for="Place.Type" class="control-label"></label>
                <select asp-for="Place.Type" class="form-control"></select>
                <span asp-validation-for="Place.Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Place.SectionId" class="control-label"></label>
                <select asp-for="Place.SectionId" class="form-control" asp-items="ViewBag.SectionId"></select>
                <span asp-validation-for="Place.SectionId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
