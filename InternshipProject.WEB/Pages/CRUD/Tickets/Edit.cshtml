@page
@model InternshipProject.WEB.Pages.CRUD.Tickets.EditModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Ticket</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Ticket.Id" />
            <div class="form-group">
                <label asp-for="Ticket.EventId" class="control-label"></label>
                <select asp-for="Ticket.EventId" class="form-control" asp-items="ViewBag.EventId"></select>
                <span asp-validation-for="Ticket.EventId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ticket.PlaceId" class="control-label"></label>
                <select asp-for="Ticket.PlaceId" class="form-control" asp-items="ViewBag.PlaceId"></select>
                <span asp-validation-for="Ticket.PlaceId" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Ticket.IsBought" /> @Html.DisplayNameFor(model => model.Ticket.IsBought)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
